<script type="text/javascript" charset="utf-8">


$(function () {
  
  new Highcharts.Chart({
    chart: { renderTo: 'container' },
    title: { text: 'Stats by <%= session[:type_of_chart] %>' },
    xAxis: { type: 'datetime' },
    yAxis: {
      title: { text: 'Duration [min]' }
    },
   
  tooltip: {
      formatter: function () {
        return Highcharts.dateFormat("%B %e %Y", this.x) + ': ' 
          + Highcharts.numberFormat(this.y, 2)+ 'min';
      }
    },



series: [
     {
      name: "Duration",
      color: '#003366',
        pointInterval: <%= interval()%>,
      pointStart: <%= interval() %>,
      data: <%= data("duration") %>
    },
   ]





    
  });

  });


</script>
<div id="container" style="width: 560px; height: 300px;"></div>
<div class="options">
  <ul class="nav nav-pills">
    
    
    <%= link_to "By day", :controller => "charts", :action => "duration", :type => "day" %>
    <%= link_to "By week", :controller => "charts", :action => "duration", :type => "week" %>
    <%= link_to "By month", :controller => "charts", :action => "duration", :type => "month" %>
    <%= link_to "By year", :controller => "charts", :action => "duration", :type => "year" %>

  </ul>
</div>