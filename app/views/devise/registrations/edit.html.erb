<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <p> <%= f.input :name, :required => true, :autofocus => true, :class => "form-control" %></p>
    <p><%= f.input :surname, :required => true, :autofocus => true, :class => "form-control" %></p>
    <p><%= f.input :birth_date, :as => :date, :start_year => Date.today.year - 5, :end_year => 1900,:order => [ :day, :month, :year], :required => true, :autofocus => true, :class => "form-control" %></p>
    <p><%= f.input :username, :required => true, :autofocus => true, :class => "form-control" %></p>
    <p><%= f.input :email, :required => true, :autofocus => true, :class => "form-control" %></p>
    <p>Avatar <%= f.file_field :avatar, :class=>"small button" %> </p>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
<br />
    <p><%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false, :class => "form-control" %></p>
    <p><%= f.input :password_confirmation, :required => false, :class => "form-control" %></p>
    <p><%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true, :class => "form-control" %></p>
  </div>

  <div>
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
