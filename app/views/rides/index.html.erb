<h1>Listing rides</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Duration</th>
      <th>Average</th>
      <th>Max</th>
      <th>Distance</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.date.strftime("%y-%m-%d")  %></td>
        <td><%= ride.duration %> min</td>
        <td><%= ride.average %> km/h</td>
        <td><%= ride.max %> km/h</td>
        <td><%= ride.distance %> km</td>
        <td><%= link_to 'Show', ride %></td>
        <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
        <td><%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

